<%- include('layout', { title: 'Create Group', body: `
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <!-- Back Button -->
        <a href="/" class="btn btn-outline-secondary position-absolute top-0 start-0 m-3">&larr; Back</a>

        <div class="card p-4 shadow w-100" style="max-width: 500px;">
            <h2 class="text-center mb-4">Create Group</h2>

            <form id="create-group-form" action="/group/create" method="POST" enctype="multipart/form-data">
                <!-- Name Field -->
                <div class="mb-3">
                    <label for="name" class="form-label">Group Name <span class="text-danger">*</span></label>
                    <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        placeholder="Enter group name"
                        required
                    >
                </div>

                <!-- link Field -->
                <div class="mb-3">
                    <label for="link" class="form-label">Group Nickname <span class="text-danger">*</span></label>
                    <input
                        type="text"
                        class="form-control"
                        id="link"
                        name="link"
                        placeholder="Enter group link"
                        required
                    >
                </div>

                <!-- Bio Field -->
                <div class="mb-3">
                    <label for="bio" class="form-label">Group Bio</label>
                    <textarea
                        class="form-control"
                        id="bio"
                        name="bio"
                        placeholder="Tell us about the group"
                        rows="3"
                    ></textarea>
                </div>

                <!-- Image Field -->
                <div class="mb-3">
                    <label for="image" class="form-label">Group Image</label>
                    <input
                        type="file"
                        class="form-control"
                        id="image"
                        name="image"
                        accept="image/*"
                    >
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Create Group</button>
            </form>
        </div>
    </div>
` }) %>
